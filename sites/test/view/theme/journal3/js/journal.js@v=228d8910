
var blockExpand = document.querySelector('.qwe');
var expandContent = document.querySelector('.block-content.expand-content');

blockExpand.addEventListener('click', function() {
  if (expandContent.style.maxHeight === 'unset') {
    expandContent.style.maxHeight = '500px';
  } else {
    expandContent.style.maxHeight = 'unset';
  }
});
